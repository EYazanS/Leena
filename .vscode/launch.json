	"version": "0.2.0",
	"configurations": [
		{
			"name": "(Linux) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/linux.out",
			"args": [],
			"stopAtEntry": false,
			"preLaunchTask": "Build Linux",
			"cwd": "${fileDirname}",
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"miDebuggerPath": "/usr/bin/gdb",
			"environment": []
		},
		{
			"name": "(Windows) Launch",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/Build/main.exe",
			"args": [],
			"stopAtEntry": false,
			"preLaunchTask": "Build Win32",
			"cwd": "${fileDirname}",
			"environment": []
		}
	]
}